{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": "airbnb",
  "rules": {
    "semi": [0],
    "no-useless-constructor": [0],
    "eol-last": [0],
    "no-trailing-spaces": [0],
    "react/prefer-stateless-function": [0],
    "import/no-extraneous-dependencies": [0],
    "react/jsx-filename-extension": [0],
    "import/first": [0],
    "spaced-comment": [0]
  }
}
